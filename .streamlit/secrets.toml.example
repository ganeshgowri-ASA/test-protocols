# Streamlit Secrets Configuration Template
# =========================================
# IMPORTANT: This is a template file. Do NOT commit actual secrets!
# Configure actual secrets in Streamlit Cloud dashboard under "Secrets"
# or create a local .streamlit/secrets.toml file for development

# Database Configuration
# ----------------------
# For Production (PostgreSQL on Supabase/Railway/Neon):
[database]
url = "postgresql://user:password@host:port/database"
# Example: "postgresql://myuser:mypass@db.example.com:5432/lims_qms"

# For Development (SQLite):
# url = "sqlite:///lims_qms.db"

# Database connection pool settings (optional)
pool_size = 5
max_overflow = 10
pool_recycle = 3600

# Authentication & Security
# -------------------------
[auth]
secret_key = "your-super-secret-key-change-this-in-production"
cookie_name = "lims_qms_auth"
cookie_expiry_days = 30

# Admin credentials (for initial setup)
admin_username = "admin"
admin_password = "change-this-password"
admin_email = "admin@example.com"

# Application Settings
# --------------------
[app]
debug_mode = false
max_upload_size_mb = 200
session_timeout_minutes = 60
environment = "production"  # production, staging, or development

# Feature flags
enable_notifications = true
enable_analytics = true
enable_audit_logging = true

# File Storage Configuration
# ---------------------------
[storage]
# Local storage path (for development)
local_path = "./uploads"

# Cloud storage (optional - for production)
# provider = "s3"  # s3, gcs, or azure
# bucket_name = "your-bucket-name"
# access_key = "your-access-key"
# secret_key = "your-secret-key"

# Email Notifications (optional)
# -------------------------------
[email]
enabled = false
smtp_server = "smtp.gmail.com"
smtp_port = 587
sender_email = "notifications@example.com"
sender_password = "your-email-password"

# API Keys (optional - for external integrations)
# ------------------------------------------------
[api]
weather_api_key = "your-weather-api-key"
calibration_service_api_key = "your-calibration-api-key"

# Logging Configuration
# ----------------------
[logging]
level = "INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
log_to_file = true
log_file_path = "./logs/app.log"
