# PV Testing Protocol Framework - Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite (default - local development)
DATABASE_URL=sqlite:///data/test_protocols.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/test_protocols

# ============================================================================
# Application Settings
# ============================================================================

# Debug mode (True for development, False for production)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# LIMS Integration (Optional)
# ============================================================================

# LIMS API Configuration
LIMS_ENABLED=False
LIMS_API_URL=https://lims.example.com/api
LIMS_API_KEY=your_lims_api_key_here
LIMS_API_VERSION=v1

# LIMS Timeout (seconds)
LIMS_TIMEOUT=30

# ============================================================================
# QMS Integration (Optional)
# ============================================================================

# QMS Configuration
QMS_ENABLED=False
QMS_API_URL=https://qms.example.com/api
QMS_API_KEY=your_qms_api_key_here

# ============================================================================
# File Storage
# ============================================================================

# Base directory for file uploads (images, reports, etc.)
UPLOAD_DIR=./uploads

# Report output directory
REPORT_DIR=./reports

# Maximum upload file size (MB)
MAX_UPLOAD_SIZE_MB=50

# ============================================================================
# Security
# ============================================================================

# Secret key for session management
SECRET_KEY=change_this_to_a_random_secret_key

# Enable authentication
AUTH_ENABLED=False

# JWT Token expiration (hours)
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Email Notifications (Optional)
# ============================================================================

# Email configuration for sending reports and alerts
EMAIL_ENABLED=False
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=pv-testing@example.com

# ============================================================================
# Report Generation
# ============================================================================

# Company name for reports
COMPANY_NAME=Your Company Name

# Company logo path (optional)
COMPANY_LOGO_PATH=./assets/logo.png

# Report footer text
REPORT_FOOTER=Confidential - For Internal Use Only

# ============================================================================
# Performance Settings
# ============================================================================

# Database connection pool size
DB_POOL_SIZE=10

# Database connection pool overflow
DB_MAX_OVERFLOW=20

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================================================
# Streamlit Configuration
# ============================================================================

# Streamlit server port
STREAMLIT_SERVER_PORT=8501

# Streamlit server address
STREAMLIT_SERVER_ADDRESS=localhost

# Enable development mode
STREAMLIT_DEV_MODE=True
