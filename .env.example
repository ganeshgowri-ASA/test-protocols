# Solar PV Testing LIMS-QMS System - Environment Configuration
# =============================================================

# Application Settings
APP_NAME="Solar PV Testing LIMS-QMS"
APP_VERSION="1.0.0"
APP_ENV="development"  # development, staging, production

# Database Configuration
# SQLite (default for development)
DATABASE_URL="sqlite:///./data/solar_pv_lims.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://username:password@localhost:5432/solar_pv_lims"

# Database Settings
DB_ECHO=False  # Set to True for SQL query logging

# Security
SESSION_SECRET_KEY="change-me-in-production-use-strong-random-string"
PASSWORD_MIN_LENGTH=8
ENABLE_AUTHENTICATION=True

# Email Configuration (for notifications)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
EMAIL_FROM="noreply@solarpv.com"
EMAIL_PASSWORD="your-email-password"

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES="csv,xlsx,xls,json,pdf,png,jpg,jpeg"

# Testing Configuration
ENABLE_QA_VALIDATION=True
REQUIRE_SUPERVISOR_APPROVAL=True
AUTO_SAVE_INTERVAL_SECONDS=60

# Protocol Settings
TOTAL_PROTOCOLS=54

# Date/Time Formats
DATE_FORMAT="%Y-%m-%d"
DATETIME_FORMAT="%Y-%m-%d %H:%M:%S"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"

# Performance
CACHE_TTL_SECONDS=300  # 5 minutes

# Deployment
HOST="0.0.0.0"
PORT=8501

# Optional: External Services
# API_KEY="your-api-key-here"
# EXTERNAL_API_URL="https://api.example.com"
