# Environment Configuration Example
# Copy this file to .env and update with your settings

# Database Configuration
DATABASE_URL=sqlite:///test_protocols.db
# For PostgreSQL: postgresql://user:password@localhost/test_protocols
# For MySQL: mysql+pymysql://user:password@localhost/test_protocols

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Protocol Directory
PROTOCOL_DIR=protocols

# Data Storage
DATA_DIR=data
EXPORT_DIR=exports
BACKUP_DIR=backups

# UI Configuration
UI_THEME=professional
AUTO_SAVE=True
AUTO_SAVE_INTERVAL=60

# Integration Settings (Future)
LIMS_ENABLED=False
LIMS_API_URL=
LIMS_API_KEY=

QMS_ENABLED=False
QMS_API_URL=
QMS_API_KEY=

# Security (Future)
SECRET_KEY=
SESSION_TIMEOUT=3600

# Email Notifications (Future)
EMAIL_ENABLED=False
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
