{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Equipment Schema",
  "description": "Schema for test equipment requirements",
  "type": "object",
  "properties": {
    "equipment_id": {
      "type": "string",
      "description": "Unique equipment identifier"
    },
    "name": {
      "type": "string",
      "description": "Equipment name"
    },
    "type": {
      "type": "string",
      "enum": [
        "load_frame",
        "pressure_sensor",
        "deflection_gauge",
        "temperature_sensor",
        "humidity_sensor",
        "data_acquisition",
        "power_supply",
        "multimeter",
        "iv_tracer",
        "environmental_chamber"
      ],
      "description": "Type of equipment"
    },
    "manufacturer": {
      "type": "string",
      "description": "Equipment manufacturer"
    },
    "model": {
      "type": "string",
      "description": "Equipment model"
    },
    "serial_number": {
      "type": "string",
      "description": "Serial number"
    },
    "calibration_required": {
      "type": "boolean",
      "default": true,
      "description": "Whether calibration is required"
    },
    "last_calibration": {
      "type": "string",
      "format": "date",
      "description": "Date of last calibration"
    },
    "calibration_due": {
      "type": "string",
      "format": "date",
      "description": "Next calibration due date"
    },
    "specifications": {
      "type": "object",
      "description": "Equipment specifications",
      "properties": {
        "range_min": {
          "type": "number",
          "description": "Minimum measurement range"
        },
        "range_max": {
          "type": "number",
          "description": "Maximum measurement range"
        },
        "accuracy": {
          "type": "number",
          "description": "Measurement accuracy"
        },
        "resolution": {
          "type": "number",
          "description": "Measurement resolution"
        }
      }
    }
  },
  "required": [
    "equipment_id",
    "name",
    "type"
  ]
}
