  "emergency_procedures": {
    "breakdown_or_flashover": {
      "immediate_actions": [
        "Press emergency stop button immediately",
        "Do not approach equipment until fully de-energized",
        "Allow module to discharge (minimum 5 minutes)",
        "Verify equipment is de-energized with appropriate meter",
        "Inspect for damage before handling"
      ],
      "notification": [
        "Notify supervisor immediately",
        "Document incident in safety log",
        "Complete incident report per QMS requirements"
      ]
    },

    "fire_or_smoke": {
      "immediate_actions": [
        "Press emergency stop button",
        "Evacuate personnel from immediate area",
        "Use appropriate fire extinguisher if safe to do so (Class C for electrical fires)",
        "Do not use water on energized equipment",
        "Call emergency services if fire cannot be quickly controlled"
      ],
      "notification": [
        "Notify supervisor and safety officer immediately",
        "Notify emergency services if required",
        "Complete incident report"
      ]
    },

    "electrical_shock": {
      "immediate_actions": [
        "Do not touch victim if still in contact with energized equipment",
        "Press emergency stop button to de-energize",
        "If victim is clear of electrical source, begin first aid/CPR if trained",
        "Call emergency services immediately",
        "Do not move victim unless necessary for safety"
      ],
      "notification": [
        "Call emergency services (911 or local equivalent)",
        "Notify supervisor and safety officer",
        "Complete incident report after victim is stabilized"
      ]
    },

    "equipment_malfunction": {
      "immediate_actions": [
        "Stop test immediately using normal shutdown if possible",
        "Use emergency stop if normal shutdown fails",
        "Tag equipment as out of service",
        "Do not attempt to repair energized equipment",
        "Notify equipment owner/supervisor"
      ],
      "notification": [
        "Notify supervisor",
        "Tag equipment for repair",
        "Document malfunction in equipment log"
      ]
    }
  },

