{
  "protocol_metadata": {
    "protocol_id": "PVTP-039",
    "version": "1.0",
    "title": "Outdoor Exposure / Accelerated Weathering Test",
    "description": "Combined environmental stress test simulating long-term outdoor exposure through accelerated UV, temperature, humidity, and cyclic weathering",
    "test_type": "environmental_accelerated_aging",
    "created_date": "2025-11-12",
    "last_modified": "2025-11-12",
    "author": "PV Testing Laboratory",
    "status": "active",
    "compliance_standards": [
      {
        "standard_id": "IEC 61215",
        "version": "4.0",
        "section": "MQT 12",
        "title": "Outdoor Exposure Test",
        "requirements": [
          "60 kWh/m² total UV irradiance (280-400 nm)",
          "Temperature: 55°C ±5°C during UV exposure",
          "Optional: cyclic exposure with humidity"
        ]
      },
      {
        "standard_id": "IEC 61215",
        "version": "4.0",
        "section": "MQT 13",
        "title": "UV Preconditioning Test",
        "requirements": [
          "15 kWh/m² UV irradiance (280-400 nm)",
          "Temperature: 60°C ±5°C"
        ]
      },
      {
        "standard_id": "IEC 61730",
        "version": "2.0",
        "section": "MST 50",
        "title": "UV Test"
      },
      {
        "standard_id": "ASTM G154",
        "version": "2016",
        "title": "Standard Practice for Operating Fluorescent Ultraviolet (UV) Lamp Apparatus for Exposure of Nonmetallic Materials"
      },
      {
        "standard_id": "ASTM G155",
        "version": "2021",
        "title": "Standard Practice for Operating Xenon Arc Lamp Apparatus for Exposure of Materials"
      },
      {
        "standard_id": "ISO 4892-2",
        "version": "2013",
        "title": "Plastics - Methods of exposure to laboratory light sources - Part 2: Xenon-arc lamps"
      }
    ],
    "related_protocols": ["PVTP-033", "PVTP-034", "PVTP-036"],
    "approval_status": {
      "reviewed_by": "Environmental Test Engineer",
      "approved_by": "Quality Director",
      "approval_date": "2025-11-12"
    }
  },
  "test_objectives": {
    "primary_objective": "Assess PV module degradation under accelerated environmental aging simulating 25-30 years of outdoor exposure",
    "secondary_objectives": [
      "Evaluate UV-induced degradation of encapsulation materials (yellowing, delamination)",
      "Assess back sheet weathering and embrittlement",
      "Measure electrical performance degradation over time",
      "Identify time-dependent failure modes (corrosion, seal degradation, delamination)",
      "Validate module lifetime predictions and warranty claims",
      "Generate degradation rate data for field performance modeling"
    ],
    "acceptance_criteria": {
      "visual_inspection": "No major visual defects (chalking, cracking, delamination < 5% of module area)",
      "electrical_performance": "Power degradation per test specification (typically 8-15% for extended tests)",
      "insulation_resistance": "≥ 40 MΩ post-test",
      "safety": "Pass dielectric withstand test",
      "encapsulation": "No severe yellowing (ΔE < 15 per IEC 61215), < 5% delamination area"
    },
    "test_duration_scenarios": {
      "uv_preconditioning": {
        "description": "IEC 61215 MQT 13 - Short UV exposure before other tests",
        "uv_dose": "15 kWh/m²",
        "duration": "Approximately 125-150 hours",
        "field_equivalent": "Approx. 1-2 years UV exposure"
      },
      "outdoor_exposure": {
        "description": "IEC 61215 MQT 12 - Standard qualification test",
        "uv_dose": "60 kWh/m²",
        "duration": "Approximately 500-600 hours",
        "field_equivalent": "Approx. 5-7 years outdoor exposure"
      },
      "extended_accelerated_aging": {
        "description": "Custom long-term durability test (beyond IEC 61215)",
        "uv_dose": "200-300 kWh/m²",
        "duration": "1500-2500 hours (2-3 months)",
        "field_equivalent": "Approx. 20-30 years outdoor exposure",
        "note": "For design validation and lifetime prediction studies"
      }
    }
  },
