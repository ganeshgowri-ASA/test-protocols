{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://test-protocols.org/schemas/track_001_schema.json",
  "title": "TRACK-001 Protocol Schema",
  "description": "Tracker Performance Test - Comprehensive tracking accuracy and performance evaluation",
  "allOf": [
    {
      "$ref": "tracker-schema.json"
    }
  ],
  "type": "object",
  "properties": {
    "protocol_id": {
      "const": "TRACK-001"
    },
    "test_parameters": {
      "type": "object",
      "properties": {
        "performance_metrics": {
          "type": "object",
          "required": ["tracking_accuracy", "positioning_speed", "power_consumption"],
          "properties": {
            "tracking_accuracy": {
              "type": "object",
              "properties": {
                "measurement_points": {"type": "integer", "minimum": 10},
                "acceptance_threshold": {"type": "number"},
                "unit": {"type": "string", "enum": ["degrees"]}
              }
            },
            "positioning_speed": {
              "type": "object",
              "properties": {
                "max_speed": {"type": "number"},
                "unit": {"type": "string", "enum": ["degrees/second"]}
              }
            },
            "power_consumption": {
              "type": "object",
              "properties": {
                "idle": {"type": "number"},
                "active": {"type": "number"},
                "unit": {"type": "string", "enum": ["W", "kW"]}
              }
            }
          }
        },
        "test_scenarios": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["scenario_id", "name", "conditions"],
            "properties": {
              "scenario_id": {"type": "string"},
              "name": {"type": "string"},
              "description": {"type": "string"},
              "conditions": {
                "type": "object",
                "properties": {
                  "time_of_day": {"type": "string"},
                  "weather": {"type": "string"},
                  "irradiance_level": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  }
}
