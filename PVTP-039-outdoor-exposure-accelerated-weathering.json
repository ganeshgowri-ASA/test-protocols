  "test_sequence": {
    "pre_test_phase": {
      "duration": "1 day",
      "steps": [
        {
          "step_number": 1,
          "action": "Visual inspection and documentation",
          "parameters": {
            "inspection_areas": [
              "Encapsulation clarity (no pre-existing yellowing)",
              "Back sheet condition",
              "Frame and junction box",
              "Module edges and seals",
              "Label legibility"
            ],
            "color_measurement": "CIE L*a*b* measurement of encapsulant (baseline)",
            "photography": "High-resolution images (close-up of encapsulant, back sheet)"
          },
          "acceptance": "No pre-existing discoloration, damage, or defects"
        },
        {
          "step_number": 2,
          "action": "Electrical characterization (baseline)",
          "parameters": {
            "measurements": ["Voc", "Isc", "Pmax", "Vmp", "Imp", "FF", "Rs", "Rsh"],
            "irradiance": "1000 W/m²",
            "module_temperature": "25°C ±2°C",
            "spectrum": "AM 1.5G"
          },
          "data_logging": {
            "file_name": "baseline_iv_curve.csv",
            "parameters_logged": ["voltage", "current", "power", "temperature", "irradiance"]
          }
        },
        {
          "step_number": 3,
          "action": "Insulation resistance test (initial)",
          "parameters": {
            "test_voltage": "1000V DC",
            "duration": "60 seconds",
            "min_resistance": "40 MΩ"
          }
        },
        {
          "step_number": 4,
          "action": "Module cleaning",
          "parameters": {
            "cleaning_method": "Deionized water and soft cloth",
            "drying": "Air dry minimum 2 hours"
          }
        },
        {
          "step_number": 5,
          "action": "Chamber preparation and verification",
          "parameters": {
            "xenon_lamp_check": "Verify lamp hours < maximum (typically 1500-2000 hours)",
            "spectral_verification": "Measure spectral distribution with spectroradiometer",
            "irradiance_calibration": "Verify UV irradiance at 340 nm with calibrated radiometer",
            "temperature_sensors": "Verify black panel thermometer calibration"
          }
        }
      ]
    },
    "accelerated_weathering_test_phase": {
      "duration": "Variable: 125-2500 hours depending on test specification",
      "test_cycle_options": {
        "option_1_continuous_uv": {
          "description": "IEC 61215 MQT 13 UV Preconditioning",
          "cycle": "Continuous UV exposure",
          "uv_irradiance": "0.35-1.0 W/m²/nm at 340 nm",
          "black_panel_temperature": "60°C ±5°C",
          "humidity": "Not controlled (ambient chamber humidity)",
          "total_uv_dose": "15 kWh/m²",
          "duration": "125-150 hours"
        },
        "option_2_outdoor_exposure": {
          "description": "IEC 61215 MQT 12 Outdoor Exposure Test",
          "cycle": "Continuous UV exposure",
          "uv_irradiance": "0.35-1.0 W/m²/nm at 340 nm",
          "black_panel_temperature": "55°C ±5°C",
          "humidity": "Not controlled",
          "total_uv_dose": "60 kWh/m²",
          "duration": "500-600 hours"
        },
        "option_3_cyclic_weathering": {
          "description": "Advanced accelerated aging with cyclic UV/humidity/spray",
          "cycle_duration": "24 hours",
          "cycle_sequence": [
            {
              "phase": "UV exposure",
              "duration": "8 hours",
              "uv_irradiance": "0.70 W/m²/nm at 340 nm",
              "black_panel_temperature": "63°C",
              "humidity": "50% RH"
            },
            {
              "phase": "Condensation (humidity)",
              "duration": "8 hours",
              "uv_off": true,
              "chamber_temperature": "50°C",
              "humidity": "100% RH (condensing)",
              "note": "Simulates nighttime dew/condensation"
            },
            {
              "phase": "Water spray",
              "duration": "0.5 hours",
              "uv_off": true,
              "water_spray": "Deionized water",
              "chamber_temperature": "25°C",
              "note": "Simulates rain"
            },
            {
              "phase": "Drying",
              "duration": "7.5 hours",
              "uv_irradiance": "0.70 W/m²/nm at 340 nm",
              "black_panel_temperature": "63°C",
              "humidity": "50% RH"
            }
          ],
          "total_cycles": "60-100 cycles",
          "total_uv_dose": "200-300 kWh/m²",
          "duration": "1500-2500 hours (2-3 months)"
        }
      },
      "steps": [
        {
          "step_number": 6,
          "action": "Module installation in weathering chamber",
          "parameters": {
            "mounting": "Modules positioned perpendicular to light source",
            "spacing": "Adequate spacing for uniform irradiance (no shadowing)",
            "orientation": "Front glass facing light source",
            "electrical_connection": "Cables routed outside chamber (unless testing electrical components under load)"
          }
        },
        {
          "step_number": 7,
          "action": "Execute accelerated weathering exposure",
          "parameters": {
            "test_mode": "Select Option 1, 2, or 3 based on test specification",
            "monitoring_frequency": "Continuous irradiance, temperature, humidity logging (every 5 minutes)",
            "operator_checks": "Daily visual inspection through chamber window, weekly chamber verification"
          },
          "data_logging": {
            "parameters": [
              "timestamp",
              "elapsed_time_hours",
              "cumulative_uv_dose_kWh_per_m2",
              "uv_irradiance_340nm",
              "black_panel_temperature",
              "chamber_air_temperature",
              "chamber_humidity",
              "cycle_phase",
              "xenon_lamp_hours"
            ],
            "sampling_rate": "5 minutes",
            "file_format": "CSV"
          }
        },
        {
          "step_number": 8,
          "action": "Interim inspections and electrical characterization",
          "parameters": {
            "frequency": "Every 15 kWh/m² UV dose (or monthly for extended tests)",
            "timing": "Pause chamber, remove modules, allow to cool to 25°C",
            "inspections": [
              "Visual inspection (yellowing, delamination, back sheet embrittlement)",
              "Color measurement (ΔE calculation)",
              "IV curve measurement",
              "Insulation resistance test"
            ],
            "data_logging": "Time-series degradation data (Pmax vs. UV dose)",
            "return_to_chamber": "After inspection, return modules to chamber and resume exposure"
          },
          "note": "Interim data enables degradation rate calculation and early failure detection"
        }
      ]
    },
    "post_test_phase": {
      "duration": "1-2 days",
      "steps": [
        {
          "step_number": 9,
          "action": "Final visual inspection",
          "parameters": {
            "timing": "After reaching target UV dose",
            "inspection": [
              "Encapsulation yellowing severity and distribution",
              "Delamination (measure affected area as % of module)",
              "Back sheet embrittlement (flex test, visual cracks)",
              "Frame and junction box condition",
              "Seal integrity",
              "Label legibility"
            ],
            "color_measurement": "CIE L*a*b* measurement of encapsulant (post-test)",
            "color_change_calculation": "ΔE = √[(ΔL*)² + (Δa*)² + (Δb*)²]",
            "photography": "High-resolution images matching pre-test locations"
          }
        },
        {
          "step_number": 10,
          "action": "Electrical characterization (final post-test)",
          "parameters": {
            "wait_time": "Allow modules to cool and stabilize (24 hours at 25°C)",
            "measurements": ["Voc", "Isc", "Pmax", "Vmp", "Imp", "FF", "Rs", "Rsh"],
            "irradiance": "1000 W/m²",
            "module_temperature": "25°C ±2°C",
            "spectrum": "AM 1.5G"
          },
          "data_logging": {
            "file_name": "final_post_test_iv_curve.csv",
            "parameters_logged": ["voltage", "current", "power", "temperature", "irradiance"]
          }
        },
        {
          "step_number": 11,
          "action": "Insulation resistance test (post-test)",
          "parameters": {
            "test_voltage": "1000V DC",
            "duration": "60 seconds",
            "min_resistance": "40 MΩ"
          }
        },
        {
          "step_number": 12,
          "action": "Dielectric withstand test (post-test)",
          "parameters": {
            "test_voltage": "1000V + 2×Voc_max",
            "duration": "60 seconds",
            "acceptance": "No breakdown"
          }
        },
        {
          "step_number": 13,
          "action": "Advanced characterization (optional)",
          "parameters": {
            "electroluminescence_imaging": "Identify cell cracks, shunts, inactive areas",
            "uv_fluorescence": "Detect EVA degradation and browning",
            "infrared_thermography": "Identify hot spots and electrical anomalies",
            "cross_section_analysis": "Destructive analysis to assess encapsulation/adhesion (if available)"
          },
          "note": "Provides detailed failure mode analysis"
        },
        {
          "step_number": 14,
          "action": "Performance degradation and pass/fail determination",
          "parameters": {
            "power_degradation": "Δ% = 100 × (Pmax_pre - Pmax_final) / Pmax_pre",
            "acceptance_iec_61215": "ΔE < 15, delamination < 5% area, per standard",
            "acceptance_extended_test": "Custom criteria (e.g., < 15% power loss for 300 kWh/m²)",
            "combined_assessment": "Electrical + visual + insulation + safety"
          }
        }
      ]
    }
  },
