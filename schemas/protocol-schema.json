{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://test-protocols.org/schemas/protocol-schema.json",
  "title": "Protocol Schema",
  "description": "Base schema for all test protocols in the framework",
  "type": "object",
  "required": ["protocol_id", "name", "version", "category", "test_parameters"],
  "properties": {
    "protocol_id": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]{3}$",
      "description": "Unique protocol identifier (e.g., TRACK-001)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable protocol name"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version number"
    },
    "category": {
      "type": "string",
      "enum": ["Performance", "Reliability", "Safety", "Environmental", "Functional"],
      "description": "Protocol category"
    },
    "description": {
      "type": "string",
      "description": "Detailed protocol description"
    },
    "test_parameters": {
      "type": "object",
      "description": "Test-specific parameters"
    },
    "qc_criteria": {
      "type": "object",
      "description": "Quality control acceptance criteria",
      "properties": {
        "limits": {
          "type": "object"
        },
        "tolerances": {
          "type": "object"
        },
        "validation_rules": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "analysis_methods": {
      "type": "object",
      "description": "Analysis and calculation methods"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {"type": "string"},
        "created_date": {"type": "string", "format": "date-time"},
        "modified_date": {"type": "string", "format": "date-time"},
        "approved_by": {"type": "string"},
        "approval_date": {"type": "string", "format": "date-time"}
      }
    }
  }
}
