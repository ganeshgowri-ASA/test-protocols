# Application Configuration
FLASK_APP=genspark_app.app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://lims_user:lims_password@localhost:5432/pv_lims
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pv_lims
DB_USER=lims_user
DB_PASSWORD=lims_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@pvlims.com

# File Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB
STORAGE_TYPE=local  # local, s3, minio

# S3/MinIO Configuration (if using cloud storage)
S3_BUCKET=pv-lims-data
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# Application Settings
TIMEZONE=UTC
LOG_LEVEL=INFO
MAX_WORKERS=4

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SESSION_TIMEOUT=3600  # seconds

# Laboratory Settings
LAB_NAME=PV Testing Laboratory
LAB_ADDRESS=123 Solar Street, Tech City
LAB_PHONE=+1-555-123-4567
LAB_EMAIL=lab@pvtesting.com
LAB_ACCREDITATION=ISO/IEC 17025:2017
